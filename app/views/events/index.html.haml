.events
  %h1 Listing events

  %table
    %thead
      %tr
        %th Title
        %th Description
        %th Start date
        %th End date
        %th
        %th
        %th

    %tbody
      - @events.each do |event|
        %tr
          %td= event.title
          %td= event.description
          %td= event.start_date
          %td= event.end_date
          %td= link_to 'Show', event,class:"events-btn-list"
          %td= link_to 'Edit', edit_event_path(event),class:"events-btn-list"
          %td= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' },class:"events-btn-list"

  %br

  = link_to 'New Event', new_event_path,class: "new-events"
  = link_to root_path , class: "new-events" do
    トップページ
